{
    "name": "zachleigh/laravel-lang-bundler",
    "description": "Create Laravel translations bundles.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Zach Leigh",
            "email": "zachleigh@fastmail.jp"
        }
    ],

    "require": {
        "php": ">=5.6.0",
        "laravel/browser-kit-testing": "^1.0"
    },

    "require-dev": {
        "laravel/laravel": "5.4.*",
        "phpunit/phpunit": "~4.0"
    },

    "autoload": {
        "psr-4": {
            "LaravelLangBundler\\": "src/"
        },

        "files": [
            "src/helpers.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "LaravelLangBundler\\tests\\": "tests/"
        }
    },

    "scripts": {
        "test": "phpunit"
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
